<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_main_showtdee"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:maxLength="4"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintEnd_toEndOf="@+id/textView_main_texttdee"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="@+id/textView_main_texttdee"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_texttdee"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/textView_main_texttdee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="52dp"
        android:text="พลังงานที่ใช้ต่อวัน"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintStart_toEndOf="@+id/textView_main_textbmr"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_bmi"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/textView_main_textbmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="52dp"
        android:text="พลังงานที่จำเป็นต่อวัน"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintStart_toEndOf="@+id/textView_main_bmr"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_bmi"
        app:layout_constraintVertical_bias="0.553" />

    <TextView
        android:id="@+id/textView_main_bmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="BMR"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_bmi"
        app:layout_constraintVertical_bias="0.415" />

    <Button
        android:id="@+id/button_main_bmr"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:text="คำนวณ"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_main_texttdee"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_bmi"
        app:layout_constraintVertical_bias="0.606" />

    <Button
        android:id="@+id/button_main_setting"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Setting"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <Button
        android:id="@+id/button_main_logout"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Logout"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_main_bmi"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:text="คำนวณ"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_main_desbmi"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button_main_food"
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Food"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />

    <TextView
        android:id="@+id/textView_main_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="BMI"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_main_showbmi"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:maxLength="5"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView_main_bmi"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_main_desbmi"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/textView_main_showbmi"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_main_showbmr"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:maxLength="4"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_main_food"
        app:layout_constraintEnd_toEndOf="@+id/textView_main_textbmr"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/textView_main_textbmr"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_textbmr"
        app:layout_constraintVertical_bias="0.228" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="184dp"
        android:layout_height="248dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_rabbit2" />

    <TextView
        android:id="@+id/textView_testtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/button_main_logout"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <TextView
        android:id="@+id/textView_main_showcalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:maxLength="9"
        android:text="0/0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.452" />

    <Button
        android:id="@+id/button_main_detail"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="รายละเอียด"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_showcalorie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_showcalorie"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_showusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_main_bmi"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_slot"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Spin"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_main_food"
        app:layout_constraintTop_toBottomOf="@+id/button_main_bmr"
        app:layout_constraintVertical_bias="0.757" />

</android.support.constraint.ConstraintLayout>